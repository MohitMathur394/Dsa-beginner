#include <stdio.h>

int main() {
    int arr[40], n, i, j, temp, key, found=0;

    printf("Enter size of array: ");
    scanf("%d", &n);

    printf("Enter %d elements:\n", n);
    for(i=0;i<n;i++){
        scanf("%d", &arr[i]);
    }

    // sort (bubble sort)
    for(i=0;i<n-1;i++){
        for(j=0;j<n-i-1;j++){
            if(arr[j] > arr[j+1]){
                temp = arr[j];
                arr[j] = arr[j+1];
                arr[j+1] = temp;
            }
        }
    }

    printf("Sorted array:\n");
    for(i=0;i<n;i++){
        printf("%d ", arr[i]);
    }
    printf("\n");

    printf("Enter number to search: ");
    scanf("%d", &key);

    // linear search
    for(i=0;i<n;i++){
        if(arr[i] == key){
            printf("Found at position %d\n", i+1);
            found = 1;
            break;
        }
    }
    if(!found){
        printf("Not found\n");
    }

    return 0;
}
